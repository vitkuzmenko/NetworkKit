source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

target 'NetworkKit' do
    platform :ios, '9.0'
    pod 'Alamofire'                         # HTTP networking       https://github.com/Alamofire/Alamofire
    pod 'ObjectMapper'                      # JSON Mapping          https://github.com/Hearst-DD/ObjectMapper
    pod 'ReachabilitySwift'
end

target 'NetworkKitMac' do
    platform :osx, '10.10'
    pod 'Alamofire'                         # HTTP networking       https://github.com/Alamofire/Alamofire
    pod 'ObjectMapper'                      # JSON Mapping          https://github.com/Hearst-DD/ObjectMapper
    pod 'ReachabilitySwift'
end

target 'NetworkKitTv' do
    platform :tvos, '9.0'
    pod 'Alamofire'                         # HTTP networking       https://github.com/Alamofire/Alamofire
    pod 'ObjectMapper'                      # JSON Mapping          https://github.com/Hearst-DD/ObjectMapper
    pod 'ReachabilitySwift'
end

